@using Discord.Rest
@using ReleaseNotifierApp.Extensions
@{
    Layout = "_Layout";
}

@{
    if (!User.IsAuthenticated() && !Context.Request.Path.Equals("/Login", StringComparison.OrdinalIgnoreCase)) {
        Context.Response.Redirect("/Login");
    }
    
    if (User.IsAuthenticated() && !User.BotAdded())
    {
        Context.Response.Redirect("/AddBot");
    }
}