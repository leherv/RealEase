@page "/Media/{id:Guid}"
@model MediaDetailsModel

<div class="card">
    <div class="card-header">
        Media - Details
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.MediaName</h5>

        <p class="card-text">LatestRelease: @Model.LatestReleaseDisplayString()</p>
        @if (Model.HasRelease)
        {
            <a href="@Model.NewestChapterLink" target="_blank" class="btn btn-primary">Read it!</a>
        }
        <div class="mt-4">
            <p class="card-text">Scrape Targets:</p>
            @if (Model.HasScrapeTargets)
            {
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Website</th>
                        <th scope="col">Website Url</th>
                        <th scope="col">ScrapeTarget Url</th>
                    </tr>
                    </thead>
                    <tbody>
                    @for (var i = 0; i < Model.ScrapeTargetDetails.Count; i++)
                    {
                        var scrapeTargetDetail = Model.ScrapeTargetDetails.ElementAt(i);
                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@scrapeTargetDetail.WebsiteName</td>
                            <td>
                                <a href="@scrapeTargetDetail.WebsiteUrl" target="_blank">
                                    @scrapeTargetDetail.WebsiteUrl
                                </a>
                            </td>
                            <td>
                                <a href="@scrapeTargetDetail.ScrapeTargetUrl" target="_blank">
                                    @scrapeTargetDetail.ScrapeTargetUrl
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody >
                </table>
            }
            else
            {
                <p>No ScrapeTargets yet</p>
            }
        </div>

        <div class="container-fluid mt-3">
            <div class="row justify-content-center">
                <h3>Add new Scrape Target</h3>
            </div>
            <div class="row">
                <form method="post" class="w-100">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label for="websiteName">Website</label>
                                    <select class="form-control"
                                            id="websiteName"
                                            name="newScrapeTarget.websiteName">
                                        @foreach (var website in Model.WebsiteViewModels)
                                        {
                                            <option value="@website.Name">@(website.Name + " - " + website.Url)</option>
                                        }
                                    </select>
                                    @Html.ValidationMessage("newScrapeTarget.websiteName")
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label for="relativePath">Relative Path</label>
                                    <input type="text"
                                           class="form-control"
                                           name="newScrapeTarget.relativePath"
                                           id="relativePath"
                                           placeholder="manga/hunter-x-hunter">
                                    @Html.ValidationMessage("newScrapeTarget.relativePath")
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <button class="btn btn-success"
                                        type="submit"
                                        asp-page-handler="NewMedia">
                                    Add Scrape Target
                                </button>
                            </div>
                        </div>

                        <input type="hidden" name="newScrapeTarget.mediaName" value="@Model.MediaName"/>
                        @Html.AntiForgeryToken()
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>