@using Discord.Rest
@using RealEaseApp.Extensions
@{
    Layout = "_Layout";
}

@{
    if (!User.IsAuthenticated() && !Context.Request.Path.Equals("/Login", StringComparison.InvariantCultureIgnoreCase)) {
        Context.Response.Redirect("/Login");
    }
    
    if (User.IsAuthenticated() && !User.BotAdded() && !Context.Request.Path.Equals("/AddBot", StringComparison.InvariantCultureIgnoreCase))
    {
        Context.Response.Redirect("/AddBot");
    }
}