@page
@using RealEaseApp.Pages.ViewComponents.Login
@model Login

<div class="container">
    <div class="text-center">
        @if (!User.IsAuthenticated())
        {
            <div>To use the service please login first.</div>
            @await Component.InvokeAsync(typeof(LoginViewComponent))
        }
        else
        {
            <div>You are already logged in. You can use the profile on the upper right to log out.</div>
        }
     
    </div>
</div>